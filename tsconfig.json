{
  "compilerOptions": {
    "declaration": true,
    "importsNotUsedAsValues": "remove",
    "noPropertyAccessFromIndexSignature": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "es2020",
    "lib": [
      "DOM"
    ]
  },
  "extends": "@tsconfig/node-lts-strictest/tsconfig.json",
  "include": [
    "**/*.ts",
    "src/logic/roles/bhrain/brief.articulate/.scratch/stepArticulate.ts",
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules",
    "**/.scratch/**/*.ts", // track them in git for reference, but no longer attempt to compile them
    "**/.temp/**/*.ts",
  ]
}
