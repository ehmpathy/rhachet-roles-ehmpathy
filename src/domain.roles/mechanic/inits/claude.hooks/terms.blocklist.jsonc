{
  // forbidden terms blocklist
  // each entry specifies a term to forbid with rationale and alternatives
  "terms": [
    {
      "term": "script",
      "why": "overloaded and vague - conflates command, procedure, operation, and mechanism",
      "alt": ["command", "executable", "procedure", "operation", "mechanism"]
    },
    {
      "term": "normalize",
      "why": "overloaded and vague - conflates format, canonical, sanitize, scale, case, encode, resolve, collapse, expand purposes",
      "alt": ["asX pattern: asE164, asIso8601, asLowercase, asTrimmed, asComparable, asExplicit, asExpanded, as${DomainObject}, as${DomainObject}${Variant} (e.g., asIsoPriceHuman)"]
    },
    {
      "term": "dryrun",
      "why": "boolean creates double negatives (dryRun: false) and limits extensibility to other modes",
      "alt": ["mode: 'PLAN' | 'APPLY'", "mode: 'PLAN' | 'VALIDATE' | 'DIFF' | 'APPLY'"]
    },
    {
      "term": "dry-run",
      "why": "boolean creates double negatives and limits extensibility to other modes",
      "alt": ["--mode plan", "--mode apply"]
    },
    {
      "term": "existing",
      "why": "needless gerund - vague and overused, prefer precise non-gerund alternatives",
      "alt": ["extant", "current", "found", "prior", "present"]
    },
    {
      "term": "nothing",
      "why": "vague negation - prefer precise alternatives that convey what is absent or empty",
      "alt": ["not one", "none", "no results", "empty", "absent", "omitted"]
    },
    {
      "term": "resolve",
      "why": "overloaded and vague - conflates derive, infer, extract, expand, lookup, compute, and settle purposes",
      "alt": ["derive", "infer", "extract", "expand", "lookup", "compute", "decide"]
    }
  ]
}
