{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src"
  },
  "exclude": [
    "dist",
    "coverage",
    "node_modules",
    "acceptance",
    "provision",
    "jest.*",
    "prettier.*",
    "commitlint.*",
    "codegen.*",
    // tests
    "src/**/__tests__/**/*.{ts,js}",
    "src/**/__test_utils__/**/*.{ts,js}",
    "src/**/*.test.{ts,js}",
    // scratch
    "src/**/.scratch/**/*.{ts,js}",
    "**/.scratch/**/*.{ts,js}",
    "rhachet.use.ts"
  ]
}
