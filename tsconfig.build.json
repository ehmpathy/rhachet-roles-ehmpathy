{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src"
  },
  "exclude": [
    "dist",
    "coverage",
    "node_modules",
    "acceptance",
    "provision",
    "jest.*",
    "prettier.*",
    "commitlint.*",
    "codegen.*",
    "src/**/.test/**/*.(ts|js)",
    "src/**/.scratch/**/*.(ts|js)",
    "src/**/.rhachet/**/*.(ts|js)",
    "src/**/*.test.(ts|js)",
    "src/**/__test_utils__/**/*.(ts|js)",
    "rhachet.use.ts"
  ]
}
